        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
            android:orientation="vertical"
            android:padding="20dp">

            <Button
                android:id="@+id/buttonSignIn"
                android:layout_width="148dp"
                android:layout_height="71dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="235dp"
                android:layout_marginTop="329dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="311dp"
                android:background="@color/black"
                android:backgroundTint="@color/red"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#cdd8f1" />

            <EditText
                android:id="@+id/editTextCode"
                android:layout_width="391dp"
                android:layout_height="54dp"
                android:layout_below="@id/progressbar"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="99dp"
                android:layout_marginEnd="0dp"
                android:alpha="10"
                android:background="@drawable/styles"
                android:digits="0123456789"
                android:drawablePadding="10dp"
                android:foregroundTint="#EDE7E7"
                android:hint="enter verification code"
                android:inputType="phone"
                android:maxLength="10"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColorHint="@color/white"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/carter_one"
                android:text="Wait for the code"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="391dp"
                android:layout_height="61dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="516dp"
                android:text="You will receive a 6-digit code for phone number verfication"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textColor="?android:attr/colorFocusedHighlight"
                android:textSize="16sp" />


        </RelativeLayout>

